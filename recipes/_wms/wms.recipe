def username():
    output = subprocess.check_output(['git','config','user.email'])
    parts = output.strip().split('@')
    
    #assert len(parts)==2 and parts[1]=='kedacom.com','git config user.email %s illegal'%parts
    return parts[0]


class Recipe(recipe.Recipe):
